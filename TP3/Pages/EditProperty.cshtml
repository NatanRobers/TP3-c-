@page "{id:int}"
@model TP3.Pages.EditPropertyModel

<h2>Editar Propriedade</h2>

<form method="post">
    <label>Nome: <input asp-for="Property.Name" /></label><br />
    <label>Preço por noite: <input asp-for="Property.PricePerNight" type="number" step="0.01" /></label><br />
    <button type="submit">Salvar</button>
</form>
